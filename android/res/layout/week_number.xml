<?xml version="1.0" encoding="utf-8"?>
<!-- Week number layout used for the dropbox week switcher -->

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/frame_selector"
  android:padding="2dip" android:layout_width="wrap_content" android:layout_height="wrap_content">
  <TextView android:id="@+id/weekId" android:layout_gravity="center" android:background="@color/white"
    android:layout_width="wrap_content" android:layout_height="wrap_content" android:padding="2dip"
  	android:textColor="@color/black" android:singleLine="true" android:textSize="17sp" />
</LinearLayout>
