<?xml version="1.0" encoding="utf-8"?>
	<!-- Header layout : Course, class and date -->
	
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/header" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:background="@color/black"
	android:stretchColumns="1">
	<TableRow 
		android:layout_marginBottom="0dip" android:padding="5dip"
		android:background="@drawable/headerc">
		<TextView android:textColor="@color/white" android:textSize="35dip"
			android:id="@+id/courseName" android:paddingLeft="5dip"/>
		<LinearLayout android:gravity="right"
			android:orientation="vertical" android:padding="5dip">
			<TextView android:id="@+id/classHeader"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textColor="@color/white" android:textSize="10dip" />
			<TextView android:id="@+id/dateHeader" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:textColor="@color/white" 
				android:textSize="10dip" android:paddingTop="5dip" android:text="Mon, 12 July" />
		</LinearLayout>
	</TableRow>
</TableLayout>
